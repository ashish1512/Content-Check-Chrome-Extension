{
  "name": "Content Checker",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Check the content and sentiment of a facebook post. Be notified whether it is safe to post it.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "<all_urls>"],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; https://maxcdn.bootstrapcdn.com; object-src 'self'"

}